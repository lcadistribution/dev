<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="mpcpgv" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Configurable Product Grid View</label>
            <tab>mageplaza</tab>
            <resource>Mageplaza_ConfigureGridView::configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Select <b>Yes</b> to enable this module]]></comment>
                </field>
                <field id="customer_group" translate="label comment" type="multiselect" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Allow Customer Groups</label>
                    <source_model>Magento\Customer\Model\ResourceModel\Group\Collection</source_model>
                </field>
                <field id="sort_enabled" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Sort With Attribute</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="display" translate="label" type="text" sortOrder="16" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Display</label>
                <field id="mobile" translate="label comment" type="multiselect" sortOrder="10" showInDefault="1" canRestore="1">
                    <label>Display Information on Mobile</label>
                    <source_model>Mageplaza\ConfigureGridView\Model\Config\Source\Display</source_model>
                    <comment>The active attributes and the price of the child product will be displayed in the grid by default</comment>
                </field>
                <field id="tablet" translate="label comment" type="multiselect" sortOrder="12" showInDefault="1" canRestore="1">
                    <label>Display Information on Tablet</label>
                    <source_model>Mageplaza\ConfigureGridView\Model\Config\Source\Display</source_model>
                    <comment>The active attributes and the price of the child product will be displayed in the grid by default</comment>
                </field>
                <field id="default" translate="label comment" type="multiselect" sortOrder="16" showInDefault="1" canRestore="1">
                    <label>Display Information on Desktop</label>
                    <source_model>Mageplaza\ConfigureGridView\Model\Config\Source\Display</source_model>
                    <comment>The active attributes and the price of the child product will be displayed in the grid by default</comment>
                </field>
                <field id="out_of_stock" translate="label comment" type="select" sortOrder="18" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Show Out Of Stock Products</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="detail" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Total Summary</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Show the summary of all selected options, total qty and total value.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
