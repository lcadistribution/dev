<requests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:framework:Search/etc/search_request.xsd">
    <request query="quick_search_container" index="catalogsearch_fulltext">
        <dimensions>
            <dimension name="scope" value="default"/>
        </dimensions>
        <queries>
            <query xsi:type="boolQuery" name="quick_search_container" boost="1">
                <queryReference clause="must" ref="mp_is_new"/>
                <queryReference clause="must" ref="mp_on_sale"/>
                <queryReference clause="must" ref="rating_summary"/>
            </query>
            <query xsi:type="filteredQuery" name="mp_is_new">
                <filterReference clause="must" ref="mp_is_new_filter"/>
            </query>
            <query xsi:type="filteredQuery" name="mp_on_sale">
                <filterReference clause="must" ref="mp_on_sale_filter"/>
            </query>
            <query xsi:type="filteredQuery" name="rating_summary">
                <filterReference clause="must" ref="rating_summary_filter"/>
            </query>
        </queries>
        <filters>
            <filter xsi:type="rangeFilter" name="mp_is_new_filter" field="mp_is_new" from="$mp_is_new$"/>
            <filter xsi:type="rangeFilter" name="mp_on_sale_filter" field="mp_on_sale" from="$mp_on_sale$"/>
            <filter xsi:type="rangeFilter" name="rating_summary_filter" field="rating_summary" from="$rating_summary.from$" to="$rating_summary.to$"  />
        </filters>
        <aggregations>
            <bucket name="mp_is_new_bucket" field="mp_is_new" xsi:type="termBucket">
                <metrics>
                    <metric type="count"/>
                </metrics>
            </bucket>
            <bucket name="mp_on_sale_bucket" field="mp_on_sale" xsi:type="termBucket">
                <metrics>
                    <metric type="count"/>
                </metrics>
            </bucket>
            <bucket name="rating_summary_bucket" field="rating_summary" xsi:type="termBucket">
                <metrics>
                    <metric type="count"/>
                </metrics>
            </bucket>
        </aggregations>
        <from>0</from>
        <size>10000</size>
    </request>
    <request query="catalog_view_container" index="catalogsearch_fulltext">
        <dimensions>
            <dimension name="scope" value="default"/>
        </dimensions>
        <queries>
            <query xsi:type="boolQuery" name="catalog_view_container" boost="1">
                <queryReference clause="must" ref="mp_is_new"/>
                <queryReference clause="must" ref="mp_on_sale"/>
                <queryReference clause="must" ref="rating_summary"/>
                <queryReference clause="must" ref="mp_in_stock"/>
            </query>
            <query xsi:type="filteredQuery" name="mp_is_new">
                <filterReference clause="must" ref="mp_is_new_filter"/>
            </query>
            <query xsi:type="filteredQuery" name="mp_on_sale">
                <filterReference clause="must" ref="mp_on_sale_filter"/>
            </query>
            <query xsi:type="filteredQuery" name="rating_summary">
                <filterReference clause="must" ref="rating_summary_filter"/>
            </query>
            <query xsi:type="filteredQuery" name="mp_in_stock">
                <filterReference clause="must" ref="mp_in_stock_filter"/>
            </query>
        </queries>
        <filters>
            <filter xsi:type="rangeFilter" name="mp_is_new_filter" field="mp_is_new" from="$mp_is_new$"/>
            <filter xsi:type="rangeFilter" name="mp_on_sale_filter" field="mp_on_sale" from="$mp_on_sale$"/>
            <filter xsi:type="rangeFilter" name="rating_summary_filter" field="rating_summary" from="$rating_summary.from$" to="$rating_summary.to$"  />
            <filter xsi:type="rangeFilter" name="mp_in_stock_filter" field="mp_in_stock" from="$mp_in_stock$"  />
        </filters>
        <aggregations>
            <bucket name="mp_is_new_bucket" field="mp_is_new" xsi:type="termBucket">
                <metrics>
                    <metric type="count"/>
                </metrics>
            </bucket>
            <bucket name="mp_on_sale_bucket" field="mp_on_sale" xsi:type="termBucket">
                <metrics>
                    <metric type="count"/>
                </metrics>
            </bucket>
            <bucket name="rating_summary_bucket" field="rating_summary" xsi:type="termBucket">
                <metrics>
                    <metric type="count"/>
                </metrics>
            </bucket>
            <bucket name="mp_in_stock_bucket" field="mp_in_stock" xsi:type="termBucket">
                <metrics>
                    <metric type="count"/>
                </metrics>
            </bucket>
        </aggregations>
        <from>0</from>
        <size>10000</size>
    </request>
</requests>
