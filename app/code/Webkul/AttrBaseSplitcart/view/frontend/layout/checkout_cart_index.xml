<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
       	<css src="Webkul_AttrBaseSplitcart::css/style.css"/>
		<script src="Webkul_AttrBaseSplitcart::js/updatecart.js"/>
	</head>
	<body>	
	    <referenceBlock name="checkout.cart.form">
            <action method="setTemplate" ifconfig="attrbasesplitcart/general_settings/active">
                 <argument name="template" xsi:type="string">Webkul_AttrBaseSplitcart::splitcart.phtml</argument>	
			</action>
			<arguments>
				<argument name="cart_view_model" xsi:type="object">Webkul\AttrBaseSplitcart\ViewModel\ViewModelClass</argument>
			</arguments>		         
		</referenceBlock>
		  <referenceBlock name="checkout.cart.summary.title">
            	         
		</referenceBlock>
		
		<referenceContainer name="content">
			<block class="Magento\Framework\View\Element\Template" name="checkout.cart.validatesection" ifconfig="attrbasesplitcart/general_settings/active" template="Webkul_AttrBaseSplitcart::updatecart.phtml" cacheable="false"/>
        </referenceContainer>
	</body>
</page>
