<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magebees" translate="label" sortOrder="100">
            <label>Magebees</label>
        </tab>
        <section id="wholesaleconfigurable" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Wholesale Configurable Products</label>
            <tab>magebees</tab>
            <resource>Magebees_Wholesaleconfigurable::wholesaleconfigurable_config</resource>
				<group id="setting" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Wholesale Configurable Products - Settings</label>
					<field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enabled</label> 
						<comment>Select Yes for display the Wholesale Configurable Product on frontend.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="expandno" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>Default number of Collapse option row</label>
					</field>	
					
					<field id="displayattributes" translate="label comment" type="multiselect" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>Display Attributes</label>
						<source_model>Magebees\Wholesaleconfigurable\Model\Config\Displayattributes</source_model>
					</field>

					
					<field id="hide_price_group" translate="label comment" type="multiselect" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>Hide Price on Table for Customer Groups</label>
						<source_model>Magebees\Wholesaleconfigurable\Model\Config\Hidegroup</source_model>
					</field>
										
					<field id="customer_group" translate="label comment" type="multiselect" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>Enable for customer groups</label>
						<source_model>Magebees\Wholesaleconfigurable\Model\Config\Customergroup</source_model>
					</field>
					<field id="enabled_product_listing" translate="label comment" type="select" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enable this extension on product listing page for list view</label> 
						<comment>Select Yes for display the wholesale configurable products on product listing page for list view.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="enabled_show_options" translate="label comment" type="select" sortOrder="160" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enable show options button for grid view</label> 
						<comment>Select Yes for display the show options button on product listing page for grid view.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="enabled_add_to_cart" translate="label comment" type="select" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enable Add to cart button in each row</label> 
						<comment>Select Yes for display the Add to cart button in each row.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					<field id="enabled_add_all_to_cart" translate="label comment" type="select" sortOrder="180" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enable Add All to cart button</label> 
						<comment>Select Yes for display the Add All to cart button on frontend.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					
					<field id="enabled_min_qty" translate="label comment" type="select" sortOrder="190" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enable Minimum Qty Allowed in Shopping Cart Message.</label> 
						<comment>Select Yes for display the Minimum Qty Allowed in Shopping Cart Message.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					
					<field id="enabled_max_qty" translate="label comment" type="select" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enable Maximum Qty Allowed in Shopping Cart Message.</label> 
						<comment>Select Yes for display the Maximum Qty Allowed in Shopping Cart Message.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					
					<field id="enabled_group" translate="label comment" type="select" sortOrder="210" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Enabled for Grouped Product</label> 
						<comment>Select Yes for display the child Product of Grouped Product on frontend.</comment> 
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model> 
					</field>
					
				</group>
				<group id="support" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Info</label>
					<field id="style" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1"> 
						<label>Info</label> 
						<frontend_model>Magebees\Wholesaleconfigurable\Block\Adminhtml\System\Config\Support</frontend_model>
					</field>
				</group>
        </section>
    </system>
</config>
