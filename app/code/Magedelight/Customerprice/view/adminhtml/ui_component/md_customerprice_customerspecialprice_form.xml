<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">md_customerprice_customerspecialprice_form.customerspecialprice_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Magedelight\Customerprice\Block\Adminhtml\CustomerSpecialprice\Edit\BackButton"/>
			<button name="delete" class="Magedelight\Customerprice\Block\Adminhtml\CustomerSpecialprice\Edit\DeleteButton"/>
			<button name="save" class="Magedelight\Customerprice\Block\Adminhtml\CustomerSpecialprice\Edit\SaveButton"/>
			<button name="save_and_continue" class="Magedelight\Customerprice\Block\Adminhtml\CustomerSpecialprice\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>md_customerprice_customerspecialprice_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>md_customerprice_customerspecialprice_form.customerspecialprice_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="customerspecialprice_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="customerspecialprice_form_data_source" class="Magedelight\Customerprice\Model\CustomerpriceSpecialprice\DataProvider">
			<settings>
				<requestFieldName>customerspecialprice_id</requestFieldName>
				<primaryFieldName>customerspecialprice_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="approve" formElement="checkbox" sortOrder="1">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">CustomerSpecialprice</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>boolean</dataType>
                <label translate="true">Approve</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="customerprice_id" formElement="hidden" sortOrder="2">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CustomerSpecialprice</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">customerprice_id</label>
				<dataScope>customerprice_id</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="name" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CustomerSpecialprice</item>
					<item name="disabled" xsi:type="boolean">true</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Customer Name</label>
				<dataScope>name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="email" formElement="input" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CustomerSpecialprice</item>
					<item name="disabled" xsi:type="boolean">true</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Customer Email</label>
				<dataScope>email</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="pid" formElement="input" sortOrder="21">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CustomerSpecialprice</item>
					<item name="disabled" xsi:type="boolean">true</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Product Id</label>
				<dataScope>pid</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="pname" formElement="input" sortOrder="22">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CustomerSpecialprice</item>
					<item name="disabled" xsi:type="boolean">true</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Product Name</label>
				<dataScope>pname</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="actual_price" formElement="input" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CustomerSpecialprice</item>
				 	<item name="disabled" xsi:type="boolean">true</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Product Price</label>
				<dataScope>actual_price</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="quantity" formElement="input" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CustomerSpecialprice</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Quantity</label>
				<dataScope>quantity</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="special_price" formElement="input" sortOrder="50">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CustomerSpecialprice</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Special Price</label>
				<dataScope>special_price</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="expiry_date" formElement="date" sortOrder="60">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">CustomerSpecialprice</item>
					<item name="options" xsi:type="array">
                   		<item name="dateFormat" xsi:type="string">yyyy-MM-dd</item>
                    	<item name="minDate" xsi:type="string">new Date()</item>
                	</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Valid till</label>
				<dataScope>expiry_date</dataScope>
				<validation>
					<!-- <rule name="required-entry" xsi:type="boolean">false</rule> -->
					<rule name="validate-date" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
